
<h1>Cocktails List</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12, col-sm-6, col-md-3">
        <%= render 'card', cocktail: cocktail %>
      </div>
    <% end %>
  </div>
</div>

<div class="link">
  <%= link_to('Add a new cocktail', new_cocktail_path)%>
</div>

