<h1>Here are the details of <%= @cocktail.name %></h1>

<div class="container">


  <p>Add ingredients to <%= @cocktail.name %></p>
  <%= simple_form_for([@cocktail, @dose]) do |f| %>
    <%= f.error_notification %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit 'Add' %>
  <% end %>

  <span class="cocktail_description">
  <p>Here are the doses</p>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %> - <%= link_to('Do you want to delete the dose?', dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" }) %></li>
    <% end %>
  </span>
  <span class='links'>
    <p><%= link_to('Go back to Cocktails List', cocktails_path) %><p>
  </span>
</div>

